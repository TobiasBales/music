<div class="container">
  <header class="mt-3">
    <div class="d-flex justify-content-between">
      <div>
        <% if crumbs.present? %>
          <%= render Bootstrap::BreadCrumb.new(crumbs: @crumbs) %>
        <% end %>
        <% if title.present? %>
          <h1>
            <%= title %>
          </h1>
        <% end %>
      </div>
      <% if actions.present? %>
        <div>
          <% actions.each do |action| %>
            <%= link_to action.to, class: "px-2", method: action.method, data: { turbo_method: action.method, turbo_confirm: action.confirm } do %>
              <i class="bi bi-<%= action.icon %>" alt="<%= action.label %>"></i>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </header>
  <main>
    <%= content %>
  </main>
</div>
