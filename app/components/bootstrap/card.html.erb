<div class="card">
    <% if image.present? %>
        <img src="<%= image %>" class="card-img-top">
    <% end %>
    <div class="card-body">
        <% if title.present? %>
            <h5 class="card-title"><%= title %></h5>
        <% end %>
        <% if subtitle.present? %>
            <h6 class="card-subtitle mb-2 text-muted"><%= subtitle %></h6>
        <% end %>
        <% if text.present? %>
            <p class="card-text"><%= text %></p>
        <% end %>
        <% if body? %>
            <%= body %>
        <% end %>
    </div>
    <%= content %>
</div>
