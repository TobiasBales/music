<div data-controller="tab-component" data-tab-component-metronome-value="<%= metronome %>" data-tab-component-count-in-value="<%= count_in %>">
  <div data-tab-component-target="tab" class="d-none">
    <%= tab %>
  </div>
  <div data-tab-component-target="wrap" class="at-wrap">
    <div data-tab-component-target="overlay" class="at-overlay">
      <div class="at-overlay-content">
        Music sheet is loading
      </div>
    </div>
    <div class="at-content">
      <div class="at-sidebar">
        <div class="at-sidebar-content">
          <div data-tab-component-target="trackList" class="at-track-list"></div>
        </div>
      </div>
      <div data-tab-component-target="viewport" class="at-viewport">
        <div data-tab-component-target="main" class="at-main"></div>
      </div>
    </div>
    <div class="at-controls">
      <div class="at-controls-left">
              <a data-action="click->tab-component#stop" data-tab-component-target="stop" class="btn at-player-stop disabled">
          <i class="fas fa-step-backward"></i>
        </a>
        <a data-action="click->tab-component#playPause" data-tab-component-target="playPause" class="btn at-player-play-pause disabled">
          <i data-tab-component-target="playPauseIcon" class="fas fa-play"></i>
        </a>
        <span data-tab-component-target="playerProgress" class="at-player-progress">0%</span>
        <div class="at-song-info">
          <span data-tab-component-target="songTitle" class="at-song-title"></span> -
          <span data-tab-component-target="songArtist" class="at-song-artist"></span>
        </div>
        <div data-tab-component-target="songPosition" class="at-song-position">00:00 / 00:00</div>
      </div>
      <div class="at-controls-right">
              <a data-action="click->tab-component#toggleCountIn" data-tab-component-target="countIn" class="btn toggle at-count-in">
          <i class="fas fa-hourglass-half"></i>
        </a>  
        <a data-action="click->tab-component#toggleMetronome" data-tab-component-target="metronome" class="btn at-metronome">
          <i class="fas fa-edit"></i>
        </a>
        <a data-action="click->tab-component#toggleLoop" data-tab-component-target="loop" class="btn at-loop">
          <i class="fas fa-retweet"></i>
        </a>
        <a data-action="click->tab-component#print" data-tab-component-target="print" class="btn at-print">
          <i class="fas fa-print"></i>
        </a>
        <div data-tab-component-target="zoom" class="at-zoom">
          <i class="fas fa-tab-component"></i>
          <select>
            <option value="25">25%</option>
            <option value="50">50%</option>
            <option value="75">75%</option>
            <option value="90">90%</option>
            <option value="100" selected>100%</option>
            <option value="110">110%</option>
            <option value="125">125%</option>
            <option value="150">150%</option>
            <option value="200">200%</option>
          </select>
        </div>
        <div data-tab-component-target="layout" class="at-layout">
          <select>
            <option value="horizontal">Horizontal</option>
            <option value="page" selected>Page</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <template data-tab-component-target="trackTemplate" id="at-track-template">
    <div class="at-track">
      <div class="at-track-icon">
        <i class="fas fa-guitar"></i>
      </div>
      <div class="at-track-details">
        <div class="at-track-name"></div>
      </div>
    </div>
  </template>
</div>
