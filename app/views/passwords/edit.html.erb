<%= render(Bootstrap::Page.new(title: "Change your password")) do %>
  <%= form_with(url: password_path, method: :patch) do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render(Bootstrap::Form::Input.new(form: form, field: :current_password, type: :password, required: true, autofocus: true, autocomplete: "current-password")) %>
    <%= render(Bootstrap::Form::Input.new(form: form, field: :password, type: :password, required: true, autocomplete: "new-password", label: "New password", hint: "12 characters minimum.")) %>
    <%= render(Bootstrap::Form::Input.new(form: form, field: :password_confirmation, type: :password, required: true, autocomplete: "new-password", label: "Confirm new password")) %>

    <%= render(Bootstrap::Form::Actions.new) do %>
      <%= render(Bootstrap::Form::Button.new(form: form, label: "Save changes", type: :submit)) %>
      <br/>
      <%= render(Bootstrap::Link.new(text: "Back", to: root_path)) %>
    <% end %>
  <% end %>
<% end %>
