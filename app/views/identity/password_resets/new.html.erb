<%= render(Bootstrap::Page.new(title: "Forgot your password")) do %>
  <%= form_with(url: identity_password_reset_path) do |form| %>
    <%= render(Bootstrap::Form::Input.new(form: form, field: :email, type: :email, autofocus: true, autocomplete: "email")) %>

    <%= render(Bootstrap::Form::Actions.new) do %>
      <%= render(Bootstrap::Form::Button.new(form: form, label: "Send password reset email", type: :submit)) %>
    <% end %>
  <% end %>
<% end %>
