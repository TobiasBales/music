<%= form_with(model: tab) do |form| %>
  <% if tab.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tab.errors.count, "error") %> prohibited this tab from being saved:</h2>

      <ul>
        <% tab.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render(Bootstrap::Form::Input.new(form: form, field: :artist, type: :text)) %>
  <%= render(Bootstrap::Form::Input.new(form: form, field: :album, type: :text)) %>
  <%= render(Bootstrap::Form::Input.new(form: form, field: :song, type: :text)) %>
  <%= render(Bootstrap::Form::Input.new(form: form, field: :tab, type: :file)) %>

  <%= render(Bootstrap::Form::Actions.new) do %>
    <%= render(Bootstrap::Form::Button.new(form: form, label: "Save", type: :submit)) %>
    <%= render(Bootstrap::Button.new(text: "Back", style: :secondary, to: :back)) %>
  <% end %>
<% end %>
