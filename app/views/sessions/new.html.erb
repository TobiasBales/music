<%= render(Bootstrap::Page.new(title: "Sign in")) do %>
  <%= form_with(url: sign_in_path) do |form| %>
    <%= render(Bootstrap::Form::Input.new(form: form, field: :email, type: :email)) %>
    <%= render(Bootstrap::Form::Input.new(form: form, field: :password, type: :password, required: true, autocomplete: "current-password")) %>
    
    <%= render(Bootstrap::Form::Actions.new) do %>
      <%= render(Bootstrap::Form::Button.new(form: form, label: "Sign in", type: :submit)) %>
      <br/>
      <%= render(Bootstrap::Link.new(text: "Sign up", to: sign_up_path)) %>
      |
      <%= render(Bootstrap::Link.new(text: "Forgot your password?", to: new_identity_password_reset_path)) %>
    <% end %>
  <% end %>
<% end %>
