<% page_title "Courses" %>

<%= render(Bootstrap::Page.new(crumbs: [
  Bootstrap::Crumb.new(text: "Courses", to: courses_path)
])) do %>
  <% if @courses.empty? %>
    No courses available
  <% else %>
    <%= render(Components::Courses.new(courses: @courses.to_a, button_text: "Details")) %>
  <% end %>
<% end %>
